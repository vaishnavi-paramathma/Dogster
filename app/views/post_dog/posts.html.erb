<div class="pet-section">
  <div class="vaishu">
    <nav class="main-nav navbar ps-5 pt-5  navbar-expand-lg">
      <a class="navbar-brand" href="#">
      </a>
      <%= image_tag('Group-22.png',alt: "books" ,id:"logo") %>
        <ul class="navbar-nav ms-auto me-5">
          <li class="nav-item-homes-nav">
            <a class="nav-link text-light h4 ps-5 p-1" href="/index">Home
              <%= image_tag('projectpaw.png',alt: "books" ,class:"img-hover") %>
            </a>
          </li>
          <li class="nav-item-about-homepage">
            <a class="nav-link text-light h4 ps-5 p-1" href="/aboutus">About us
              <%= image_tag('projectpaw.png',alt: "books" ,class:"img-hover") %>
            </a>
          </li>
          <li class="nav-item-adopt-adoptpage">
            <a class="nav-link text-light h4 ps-5 p-1" href="/posts">Adopt a pet</a>
          </li>
          <li class="nav-item-rehome">
            <a class="nav-link text-light h4 ps-5 p-1" href="/list">Rehome a pet
              <%= image_tag('projectpaw.png',alt: "books" ,class:"img-hover") %>
            </a>
          </li>
          <li class="nav-item-contact">
            <a class="nav-link text-light h4 ps-5 p-1" href="#"> Contact us
              <%= image_tag('projectpaw.png',alt: "books" ,class:"img-hover") %>
            </a>
          </li>
          <li class="nav-item-account">
            <% if @current_user==nil %>
              <a class="nav-link text-light h4 ps-5 p-1" href="/register">My account
                <%= image_tag('projectpaw.png',alt: "books" ,class:"img-hover") %>
              </a>
              <% else %>
                <a class="nav-link text-light h4 ps-5 p-1" href="/user_profile">
                  <%= @current_user.first_name%>
                    <%= image_tag('projectpaw.png',alt: "books" ,class:"img-hover") %>
                </a>
                <% end %>
          </li>
        </ul>
    </nav>
    <hr>
  </div>
  <div class="search-filters-container">
    <%= form_tag('/search', :method=> "get") do%>
      <div class="search-bar">
        <input type="text" name="search" placeholder="Search by city" class="search-input">
        <%= button_tag "Apply filter" , :class=>'apply-filter-button' %>
      </div>
      <% end %>
  </div>

  <div class="main-container">
    <% if @presence_value==0%>

      <% logged_user_id=session[:current_user_id] %>
        <% logged_user=User.find(logged_user_id) %>

          <% @animals_details.each do |ani| %>
           <% @posted_user = User.find(ani.users_id) %>

            <div class="adopt-details">
              <div id="date">
                <%= "posted on: #{ani.created_at}" %>
              </div>
              <div>
              <%= image_tag ani.image , class:"adopt-img" %>
              </div>
            <a href="/user_profile/<%= ani['id']%>">  <p>Add</p></a>
              <div class="adopt-body">
                <h1>
                  <%= "#{ani.dog_name}" %>
                </h1>
                <p id="gender">
                  <%= "#{ani.gender} ," %>
                </p>

                <p id="age">
                  <%= "#{ani.age} year old" %>
                </p> <br>

                <p id="state">
                  <%= "#{ani.state}, " %>
                </p>

                <p id="city">
                  <%= "#{ani.city}" %>
                </p>
                <hr>
                <h2>Owner details</h2>
                <div id="own_name">
                  <%= @posted_user.first_name%>
                </div>

                <div id="email">
                  <%= @posted_user.email%>
                </div>


                <a href="/post_dog/show/<%= ani.id%>">
                  <h3>See more details</h3>
                </a>


              </div>
            </div>
            <% end %>


              <% elsif @presence_value==1 and @search_params !=[]%>
                <% logged_user_id=session[:current_user_id] %>
                  <% logged_user=User.find(logged_user_id) %>
                    <% @animals_details.each do |ani|%>
                      <% @posted_user = User.find(ani.users_id) %>
                        <div class="sub-main">
                          <div class="adopt-details">
                            <div id="date">
                              <%= "posted on: #{ani.created_at}" %>
                            </div>
                            <div>
                              <%= image_tag ani.image, class:"adopt-img"%>
                            </div>
                            
                            <div class="adopt-body">
                              <h1>
                                <%= "#{ani.dog_name}" %>
                              </h1>
                              <p id="gender">
                                <%= "#{ani.gender} ," %>
                              </p>

                              <p id="age">
                                <%= "#{ani.age} year old" %>
                              </p> <br>

                              <p id="state">
                                <%= "#{ani.state}, " %>
                              </p>

                              <p id="city">
                                <%= "#{ani.city}" %>
                              </p>
                              <hr>
                              <h2>Owner details</h2>
                              <p id="own_name">
                                <%= @posted_user.first_name%>
                              </p>

                              <p id="email">
                                <%= @posted_user.email%>
                              </p>

                              <a href="/post_dog/show/<%= ani.id%>">
                                <h3>See more details</h3>
                              </a>


                            </div>

                          </div>
                          <% end %>
                        </div>
  </div>
</div>
<div>
 
    <% elsif @search_params==[] and @presence_value==1 %>
      <div class="unavailable" style="background-color: blue;"> Hello </div>
      <%end%>
      

</div>

</div>