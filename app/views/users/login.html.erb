<div class="login_main_div2">
<section class="vh-100 bg-image" >
  <div class="mask d-flex align-items-center h-100">
    <div class="container h-100">
<%= image_tag('Group-22.png',alt: "books",id:"login-img") %>
        <div class="col-12 col-md-9 col-lg-7 col-xl-8" id="login-input-box">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5" id="vaish">Log In</h2>
              <form action ="/users/create" method="post" >
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                
                <div class="form-outline mb-4">
                  <input type="email" id="login-input" class="form-control form-control-lg" name="user[email]" required />
                  <label class="form-label" for="form3Example1cg" id="label-name">Your Email</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="password" id="login-input" class="form-control form-control-lg" name="user[password]" required />
                  <label class="form-label" for="form3Example1cg" id="label-name">Password</label>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn btn-block text-body" id="login-btn">Login</button>
                </div>

                <p class="text-danger text-center mt-5 fw-bold" id="text-area">If don't have an account?<a href="/register"
                    class="fw-bold text-body"><u> Register here</u></a></p>

              </form>
            </div>
        </div>
    </div>
  </div>
</section>
</div>
